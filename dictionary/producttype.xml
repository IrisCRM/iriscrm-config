<?xml version="1.0"?>
<DICT>
   <DICTONARY table="iris_ProductType">
      <GRID_WND caption="Типы продуктов" width="600" height="275">
         <COLUMNS>
            <ITEM caption="Название" db_field="Name" width="50%" row_type="common"/>
            <ITEM caption="Поле сортировки" db_field="Code" width="20%" row_type="common"/>
            <ITEM caption="Описание" db_field="Description" width="30%" row_type="common"/>
         </COLUMNS>
      </GRID_WND>
      <EDITCARD name="dc_ProductType" caption="Тип продукта" width="450" height="225" layout="1, 1, 1">
