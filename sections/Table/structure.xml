                  <FIELD elem_type="checkbox" row_type_checked_index="1" caption="Изменение прав" 
                     db_field="A" mandatory="yes" datatype="string" row_type="domain" row_type_domain_name="d_yn_binary"/>
				  <FIELD elem_type="spacer"/>
               </ELEMENTS>
            </EDITCARD>
         </DETAIL>
      </DETAILS>
   </TAB>
</MENU_TAB>
