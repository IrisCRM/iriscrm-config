				  <ITEM caption="Каскадное удаление" db_field="R" width="10%" row_type="domain" row_type_domain_name="d_yn_binary"/>
 -->
			  </COLUMNS>
            </GRID>
            <EDITCARD name="dc_Table_Column" caption="Колонка" parent_card_source="grid" parent_card_name="Table_Column"/>
