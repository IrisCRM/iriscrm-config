 -->
			<ITEM caption="Состояние" item_style="font-weight: bold;" auto_table="iris_DocumentState" auto_filter_column="id" auto_display_column="name" auto_sort_column="orderpos" auto_where_clause="T0.DocumentStateID='#VALUE#'" />
         </FILTERS>
